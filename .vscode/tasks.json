{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "process",
            "command": "cargo",
            "args": [
                "build"
            ]
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "RUST_BACKTRACE=1",
            "args": [
                "cargo",
                "run",
                "--bin",
                "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}